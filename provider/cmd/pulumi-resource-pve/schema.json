        "roleid": {
          "type": "string",
          "description": "The role ID of the ACL.",
          "replaceOnChanges": true
        },
        "type": {
          "type": "string",
          "description": "The type of the ACL. Must be one of 'user', 'group', or 'token'.",
          "replaceOnChanges": true
